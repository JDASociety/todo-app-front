---
interface Props {
	headerTitle: string
	title: string
}

const { headerTitle, title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{headerTitle}</title>
	</head>
	<body>
		<main>
			<h1>{title}</h1>
			<slot />
		</main>
	</body>
</html>
